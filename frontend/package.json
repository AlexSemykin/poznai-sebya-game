{
  "name": "tg-mini-app",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "frontend/node_modules/.bin/vite",
    "build": "frontend/node_modules/.bin/tsc -b && vite build",
    "lint": "frontend/node_modules/.bin/eslint tg-mini-app",
    "preview": "frontend/node_modules/.bin/vite preview",
    "deploy": "if not exist \"..\\docs\" mkdir ..\\docs && npm run build && git add ..\\docs"
  },
  "dependencies": {
    "@twa-dev/sdk": "^8.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  }
}
